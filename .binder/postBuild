mkdir bin

# installation instructions from the SLiM manual:
wget http://benhaller.com/slim/SLiM.zip
unzip SLiM.zip
cd SLiM
cmake .
make slim

# move the compiled SLiM binary
cd ../
mv SLiM/slim bin/
rm SLiM.zip
rm -rf SLiM

export PATH=/home/jovyan/bin:$PATH
echo "PATH=$PATH" > ~/.Renviron

echo 'cat("-------------------------\nPlease be aware that Binder cloud has extremely limited resources.\nThe system is much less powerful than a below average computer and\nvery large simulations will get killed.\n-------------------------\n")' > .Rprofile

